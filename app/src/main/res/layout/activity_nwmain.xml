<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".NWMainActivity">

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/northEditText"
        android:hint="N"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/southEditText"
        android:hint="S"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/northEditText"
        android:layout_toEndOf="@+id/northEditText"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/eastEditText"
        android:hint="E"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/southEditText"
        android:layout_toEndOf="@+id/southEditText"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/westEditText"
        android:hint="W"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/eastEditText"
        android:layout_toEndOf="@+id/eastEditText"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/loadButton"
        android:layout_alignTop="@+id/longitudeEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"/>

</RelativeLayout>
