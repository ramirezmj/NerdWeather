<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <PreferenceCategory android:title="Choose what to show in detail view">
        <CheckBoxPreference
            android:key="temperature_option"
            android:title="Temperature"
            android:summary="Toggle temperature ON/OFF" />
        <CheckBoxPreference
            android:key="wind_option"
            android:title="Wind"
            android:summary="Toggle wind ON/OFF" />
        <CheckBoxPreference
            android:key="humidity_option"
            android:title="Humidity"
            android:summary="Toggle humidity ON/OFF" />
    </PreferenceCategory>
</PreferenceScreen>
